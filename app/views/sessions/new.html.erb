<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <div class="box">
          <h1 class="title has-text-centered">Gym Trainer</h1>
          <p class="subtitle has-text-centered">Enter your identifier to start</p>

          <%= form_with url: session_path, method: :post do |f| %>
            <div class="field">
              <%= f.label :identifier, class: "label" %>
              <div class="control">
                <%= f.text_field :identifier, class: "input", placeholder: "e.g. carlows", required: true, autofocus: true %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.submit "Enter", class: "button is-primary is-fullwidth" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
